{
  "name": "project-manager",
  "version": "1.0.0",
  "description": "AI-powered project management system with task prioritization and employee mapping",
  "main": "server/index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && nodemon index.js",
    "client": "cd client && npm start",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "keywords": [
    "project-management",
    "ai",
    "task-prioritization"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "nodemon": "^3.1.10"
  }
}
